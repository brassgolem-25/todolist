<%- include('header'); -%>
    <div class="box" id="heading">
      <h1><%=kindOfDay%></h1>
    </div>
    <div class="box">


    <%newListItem.forEach((i) => {%>
      <form  action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="check" value="<%=i._id%>" onchange="this.form.submit()">
           <p><%=i.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%=kindOfDay%>"></input>
      </form>
    <%});%>

   <form  action="/" method="post">
     <input type="text" name="newItem" placeholder="NewItem" autocomplete="off">
     <button type="submit" name="list" value="<%=kindOfDay%>">+</button>
   </form>
    </div>

<%- include('footer'); -%>
